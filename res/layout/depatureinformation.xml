<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Depatching Time    :" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox1"
        android:layout_alignLeft="@+id/checkBox2"
        android:text="VENUE" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_centerVertical="true"
        android:text="BUS STAND" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:text="OUR OFFICE" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="21dp" />
 <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="21dp" />
   
    <RadioGroup
        android1:id="@+id/radioGroup1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        >
        
        <RadioButton
        android1:id="@+id/radio0"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:checked="true"
        android1:text="AM" />

    <RadioButton
        android1:id="@+id/radio1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/radio0"
        android1:layout_below="@+id/radio0"
        android1:text="PM" />
    </RadioGroup>

    <Button
        android1:id="@+id/button4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/checkBox2"
        android1:layout_alignParentBottom="true"
        android1:layout_marginBottom="18dp"
        android1:layout_marginLeft="17dp"
        android1:text="DONE" />

    <CheckBox
        android1:id="@+id/checkBox3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/checkBox2"
        android1:layout_below="@+id/checkBox2"
        android1:layout_marginTop="20dp"
        android1:text="OTHER PLACE" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_marginLeft="29dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" 
        android1:visibility="invisible">"

        <requestFocus />
    </EditText>
    
</RelativeLayout>